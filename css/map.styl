// Custom Leaflet map styles

.marking-map
  display: flex
  .marking-map-controls
    flex: 0
    width: 10rem
  .marking-map-map
    position: relative
    flex: 1 0 auto


// Marker
.leaflet-div-icon
  // Remove default styling
  background: transparent
  border: none

  // Fit any SVG icons
  svg
    width: 100%
    height: 100%
